<!doctype html>
<html lang="en" data-framework="angularjs">
  <head>
    <meta charset="utf-8">
    <title>AngularJS â€¢ Bookmark Manager</title>
    <link rel="stylesheet" href="node_modules/bookmarkmvc-common/base.css">
    <link rel="stylesheet" href="node_modules/bookmarkmvc-app-css/index.css">
    <style>[ng-cloak] { display: none; }</style>
  </head>
  <body ng-app="bookmarkmvc">
    <ng-view></ng-view>
    <script type="text/ng-template" id="bookmarkmvc-index.html">
      <section id="bookmarkapp">
        <header id="header">
          <h1>bookmarks</h1>
          <form id="bookmark-form" ng-submit="addBookmark()">
            <input id="new-bookmark" placeholder="What would you like to bookmark?" ng-model="newBookmark" ng-disabled="saving" autofocus>
          </form>
        </header>
        <section id="main" ng-show="bookmarks.length" ng-cloak>
          <input id="toggle-all" type="checkbox" ng-model="allChecked" ng-click="markAll(allChecked)">
          <label for="toggle-all">Mark all as complete</label>
          <ul id="bookmark-list">
            <li ng-repeat="bookmark in bookmarks | filter:statusFilter track by $index" ng-class="{completed: bookmark.completed, editing: bookmark == editedBoomark}">
              <div class="view">
                <input class="toggle" type="checkbox" ng-model="Bookmark.completed" ng-change="toggleCompleted(bookmark)">
                <label ng-dblclick="editBookmark(bookmark)">{{bookmark.title}}</label>
                <button class="destroy" ng-click="removeBookmkar(bookmark)"></button>
              </div>
              <form ng-submit="saveEdits(bookmark, 'submit')">
                <input class="edit" ng-trim="false" ng-model="bookmark.title" bookmark-escape="revertEdits(bookmark)" ng-blur="saveEdits(bookmark, 'blur')" bookmark-focus="bookmark == editedBookmark">
              </form>
            </li>
          </ul>
        </section>
        <footer id="footer" ng-show="bookmark.length" ng-cloak>
          <span id="bookmark-count"><strong>{{remainingCount}}</strong>
            <ng-pluralize count="remainingCount" when="{ one: 'item left', other: 'items left' }"></ng-pluralize>
          </span>
          <ul id="filters">
            <li>
              <a ng-class="{selected: status == ''} " href="#/">All</a>
            </li>
            <li>
              <a ng-class="{selected: status == 'active'}" href="#/active">Active</a>
            </li>
            <li>
              <a ng-class="{selected: status == 'completed'}" href="#/completed">Completed</a>
            </li>
          </ul>
          <button id="clear-completed" ng-click="clearCompletedBookmarks()" ng-show="completedCount">Clear completed</button>
        </footer>
      </section>
      <footer id="info">
        <p>Double-click to edit a bookmark</p>
        <p>Credits:
          <a href="http://twitter.com/cburgdorf">Christoph Burgdorf</a>,
          <a href="http://ericbidelman.com">Eric Bidelman</a>,
          <a href="http://jacobmumm.com">Jacob Mumm</a> and
          <a href="http://blog.igorminar.com">Igor Minar</a>
        </p>
        <p>Part of <a href="http://todomvc.com">TodoMVC</a></p>
      </footer>
    </script>
    <script src="node_modules/bookmarkmvc-common/base.js"></script>
    <script src="node_modules/angular/angular.js"></script>
    <script src="node_modules/angular-route/angular-route.js"></script>
    <script src="node_modules/angular-resource/angular-resource.js"></script>
    <script src="js/app.js"></script>
    <script src="js/controllers/bookmarkCtrl.js"></script>
    <script src="js/services/bookmarkStorage.js"></script>
    <script src="js/directives/bookmarkFocus.js"></script>
    <script src="js/directives/bookmarkEscape.js"></script>
  </body>
</html>
